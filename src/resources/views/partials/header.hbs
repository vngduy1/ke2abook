<header class="bookstore-header">
  <div class="header-container">
    <!-- ロゴ -->
    <div class="logo">
      <a href="/">
        <img src="/images//KE2abook.png" alt="ke2aBook" class="logo-img" />
      </a>
    </div>

    <div class="nav-toggle">
      <img src="/images/icon/nav.svg" alt="Nav Icon" class="nav-icon" />
    </div>

    <nav class="nav-menu">
      <ul class="nav-list">
        {{#unless user.isAdmin}} {{#if user}}
        <li>
          <a class="" href="/book/create-new-book"
            ><img
              src="/images/icon/upload.svg"
              alt="upload"
              class="upload-icon"
          /></a>
        </li>
        {{/if}}
        <li><a href="/about">紹介</a></li>
        <li><a href="/contact">お問い合わせ</a></li>
        {{/unless}} {{#unless user}}
        <li><a href="/api/sign-in">ログイン</a></li>
        {{/unless}} {{#if user}}
        <li class="avatar-menu">
          <img
            src="data:image/jpeg;base64,{{{user.image}}}"
            alt="Avatar"
            class="avatar-img"
          />
          <div class="dropdown-menu">
            {{#if user.isAdmin}}
            <a href="/admin/get-crud">アカウント管理</a>
            {{/if}}
            <a href="/api/profile">プロフィール</a>
            <a href="/book/list">書籍リスト</a>
            <a href="/api/logout">ログアウト</a>
          </div>
        </li>
        　 {{/if}}
      </ul>
    </nav>
  </div>
</header>
<script src="/js/header.js"></script>
