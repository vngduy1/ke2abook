<div class="container login-mt-100">
  <div class="row">
    <form action="/api/login" method="POST">
      <div class="form-row">
        <div class="col-12 mt-3">ログイン</div>
        {{#if errCode }}
        <div class="alert alert-danger" role="alert">{{message}}</div>
        {{/if}}
        <div class="form-group col-12">
          <label for="email">メールアドレス</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="メールアドレス"
            required
          />
        </div>
        <div class="form-group col-12">
          <label for="password">パスワード</label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="パスワード"
            required
          />
        </div>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">ログイン</button>
        <a href="/api/sign-up" class="btn btn-primary">登録</a>
      </div>
    </form>
  </div>
</div>
